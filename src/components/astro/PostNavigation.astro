---
import { BASE_URL } from '../../utils/share';
import { generateUrl } from '../../i18n/utils';

interface PostLink {
  slug: string;
  title: string;
};

const { collection, prev, next }: { collection: string, prev?: PostLink; next?: PostLink } = Astro.props;
---

<div class="mt-12 grid grid-cols-2 gap-px rounded-md overflow-hidden">
  <!-- OLDER -->
  <a
    href={prev ? `${BASE_URL}${generateUrl(collection, prev.slug)}` : '#'}
    class={`post-nav-btn group flex flex-col justify-center p-4 border border-gray-700 transition ${
      prev ? 'hover:bg-indigo-700 hover:text-white' : 'text-gray-600 cursor-default'
    }`}
  >
    <span class="text-xs text-gray-500 group-hover:text-gray-200">OLDER</span>
    <span class="mt-1 text-sm font-medium leading-snug break-words">
      {prev?.title || '-'}
    </span>
  </a>

  <!-- NEWER -->
  <a
    href={next ? `${BASE_URL}${generateUrl(collection, next.slug)}` : '#'}
    class={`post-nav-btn group flex flex-col justify-center p-4 border border-gray-700 transition ${
      next ? 'hover:bg-indigo-700 hover:text-white' : 'text-gray-600 cursor-default'
    } text-right`}
  >
    <span class="text-xs text-gray-500 group-hover:text-gray-200">NEWER</span>
    <span class="mt-1 text-sm font-medium leading-snug break-words">
      {next?.title || '-'}
    </span>
  </a>
</div>
