---
import { BASE_URL } from '../../utils/share';
import { generateUrl } from '../../i18n/utils';
const { title, description, pubDate, collection, slug } = Astro.props;
---

<a href={`${BASE_URL}${generateUrl(collection, slug)}`} class="group block rounded-lg border border-gray-700 bg-gray-800 p-6 transition hover:border-indigo-500 hover:bg-gray-700">
  <h2 class="text-xl font-bold text-white group-hover:text-indigo-400 break-words">
    {title}
  </h2>
  <p class="mt-2 text-sm text-gray-400">{description}</p>
  <time class="mt-3 block text-xs text-gray-500">{new Date(pubDate).toLocaleDateString()}</time>
</a>
