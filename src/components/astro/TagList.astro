---
import { BASE_URL } from '../../utils/share';
import { slugify } from '../../utils/astro';
import { getLangFromUrl } from '../../i18n/utils';

const { tags = [] } = Astro.props;
const lang = getLangFromUrl(Astro.url);
---

{tags.length > 0 && (
  <div class="mt-4 flex flex-wrap gap-2">
    {tags.map(tag => (
      <a
        href={`${BASE_URL}${lang}/tags/${slugify(tag)}`}
        class="inline-block rounded-lg border border-gray-700 bg-gray-800 p-2 transition hover:border-indigo-500 hover:bg-gray-700"
      >
	  <span class="hoverable-text text-white break-words">{tag}</span>
      </a>
    ))}
  </div>
)}
