---
import "../styles/global.css";
import { baseUrl } from '../utils/share'

const { title = "My Site" } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title}</title>
  </head>
  <body class="font-sans bg-white text-gray-900 dark:bg-gray-900 dark:text-white">
    <header class="p-4 shadow bg-white dark:bg-gray-800">
      <a href={baseUrl} class="text-xl font-bold hover:underline">
        My Site
      </a>
    </header>
    <main class="p-4">
      <slot />
    </main>
    <footer class="p-4 mt-12 text-center text-sm text-gray-500">
      &copy; {new Date().getFullYear()} My Site
    </footer>
  </body>
</html>

