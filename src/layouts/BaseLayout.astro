---
import Header from "../layouts/Header.astro";
import Sidebar from "../layouts/Sidebar.astro";
import { baseUrl } from '../utils/share'
import "../styles/global.css";

const { title = "My Site" } = Astro.props;
---

<!DOCTYPE html>
<html lang="en" class="dark">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title}</title>
  </head>
  <!-- <body class="font-sans bg-white text-gray-900 dark:bg-gray-900 dark:text-white"> -->
  <body class="bg-gray-900 text-gray-100 antialiased">
    <input type="checkbox" id="menu-toggle" class="peer absolute -top-20 opacity-0" />
    <Sidebar />
    <Header />
    <!-- Content wrapper shifts when sidebar opens on mobile -->
    <div class="min-h-screen pt-16 transition-transform duration-300 peer-checked:translate-x-[70vw] md:ml-[22rem] md:translate-x-0">
      <main class="p-6">
        <slot />
      </main>
    </div>

    <footer class="p-4 mt-12 text-center text-sm text-gray-500">
      &copy; {new Date().getFullYear()} All rights reserved.
    </footer>
  </body>
</html>

