---
import BaseLayout from '../layouts/BaseLayout.astro';
import { BASE_URL } from '../utils/share';
import { getLangFromUrl } from '../i18n/utils';
const lang = getLangFromUrl(Astro.url);
---

<BaseLayout title="404: Page not found">
  <section class="flex flex-col items-center gap-6 py-24">
    <h1 class="text-4xl font-bold">404: Page Not Found</h1>
    <p class="text-gray-400">Sorry, this address is not valid.</p>
    <a href=`${BASE_URL}${lang}/articles` class="hover:text-gray-200">Home</a>
  </section>
</BaseLayout>
