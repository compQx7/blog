---
import BaseLayout from '../layouts/BaseLayout.astro';
import { baseUrl } from '../utils/share'
---

<BaseLayout title="404 Not Found">
  <section class="flex flex-col items-center gap-6 py-24">
    <h1 class="text-4xl font-bold text-gray-100">404: Page Not Found</h1>
    <p class="text-gray-400">Sorry, this address is not valid.</p>
	<a href={baseUrl} class="hover:text-gray-200">Home</a>
  </section>
</BaseLayout>
